{
  "extends": [
    "tslint-eslint-rules",
    "tslint-import-group-ordering"
  ],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "switch-default": true,
    "prefer-conditional-expression": [true, "check-else-if"],
    "no-void-expression": true,
    "no-inferrable-types": true,
    "member-access": [true, "no-public"],
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "private-static-field",
          "public-instance-field",
          "protected-instance-field",
          "private-instance-field",
          "public-static-method",
          "private-static-method",
          "public-constructor",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "ban-types": [
      true,
      ["Object", "Use 'any' instead."],
      ["String", "Use 'string' instead"]
    ],
    "space-within-parens": [true, 0],
    "switch-final-break": true,
    "prefer-while": true,
    "prefer-switch": [true, {"min-cases":  4}],
    "one-variable-per-declaration": true,
    "number-literal-format": true,
    "no-unnecessary-initializer": true,
    "no-irregular-whitespace": true,
    "no-consecutive-blank-lines": [true, 2],
    "binary-expression-operand-order": true,
    "no-default-export": true,
    "use-isnan": true,
    "no-unsafe-finally": true,
    "no-this-assignment": true,
    "no-sparse-arrays": true,
    "no-invalid-template-strings": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-super": true,
    "no-conditional-assignment": true,
    "curly": true,
    "callable-types": true,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "eofline": true,
    "forin": true,
    "import-blacklist": true,
    "import-spacing": true,
    "import-group-ordering": {
      "severity": "error",
      "options": {
        "imports-groups": [
          {
            "name": "dependencies"
          },
          {
            "name": "ionic"
          },
          {
            "name": "app"
          },
          {
            "name": "other"
          }
        ],
        "matching-rules": [
          {
            "type": "ionic",
            "matches": "^(@ionic|@ionic-native)",
            "imports-group": "ionic"
          },
          {
            "type": "project",
            "matches": "^(app|mocks|environments)",
            "imports-group": "app"
          },
          {
            "type": "dependencies",
            "imports-group": "dependencies",
            "disable-native-nodejs-modules": true,
            "from-package.json": true
          },
          {
            "type": "project",
            "matches": ".*",
            "imports-group": "other"
          }
        ]
      }
    },
    "indent": [
      true,
      "spaces"
    ],
    "label-position": true,
    "max-line-length": [
      true,
      140
    ],
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace",
      "log",
      "error"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-shadowed-variable": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "prefer-const": true,
    "quotemark": [
      true,
      "single"
    ],
    "radix": true,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "no-duplicate-imports": true,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "case-insensitive"
      }
    ],
    "array-type": [true, "generic"],
    "newline-before-return": true,
    "return-undefined": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    "type-literal-delimiter": true,
    "prefer-object-spread": true,
    "no-object-literal-type-assertion": true,
    "interface-name": [true, "never-prefix"],
    "no-boolean-literal-compare": true,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-snake-case"
    ],
    "max-classes-per-file": [true, 1],
    "prefer-readonly": true,
    "no-string-literal": true,
    "cyclomatic-complexity": [true, 10],
    "max-file-line-count": [true, 400],
    "no-null-keyword": true
  }
}
